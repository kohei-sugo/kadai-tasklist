<%= form_for task do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content, "タスク" %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status, "ステータス" %>
    <%= f.select :status, [["着手前", "Todo"],["進行中", "Progress"],["完了", "Done"]], {}, class: 'form-control' %>
  </div>

  <%= f.submit "登録", class: 'btn btn-primary' %>
<% end %>