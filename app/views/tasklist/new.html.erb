<h1>メッセージ新規作成ページ</h1>

<%= form_for @tasklist, :url => { :controller => :tasklist, :action => :create } do |f| %>
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>

  <%= f.label "ステータス" %>
  <%= f.select :status, [["着手前", "Todo"],["進行中", "progress"],["完了", "Done"]] %>

  <%= f.submit "登録" %>
<% end %>

<%= link_to "一覧に戻る", tasklist_index_path %>